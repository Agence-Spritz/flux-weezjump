{% extends 'base.html.twig' %}

{% block body %}
    <h1>Creneaus list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Debut</th>
                <th>Duree</th>
                <th>Active</th>
                <th>Couleur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for creneau in creneaus %}
            <tr>
                <td><a href="{{ path('creneau_show', { 'id': creneau.id }) }}">{{ creneau.id }}</a></td>
                <td>{% if creneau.debut %}{{ creneau.debut|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ creneau.duree }}</td>
                <td>{% if creneau.active %}Yes{% else %}No{% endif %}</td>
                <td>{{ creneau.couleur }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('creneau_show', { 'id': creneau.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('creneau_edit', { 'id': creneau.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('creneau_new') }}">Create a new creneau</a>
        </li>
    </ul>
{% endblock %}
