{% extends 'base.html.twig' %}

{% block body %}
    <h1>Jour</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ jour.id }}</td>
            </tr>
            <tr>
                <th>Day</th>
                <td>{% if jour.day %}{{ jour.day|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Debut</th>
                <td>{% if jour.debut %}{{ jour.debut|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{% if jour.fin %}{{ jour.fin|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Maximum</th>
                <td>{{ jour.maximum }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('jour_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('jour_edit', { 'id': jour.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
