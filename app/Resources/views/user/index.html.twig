{% extends 'layout.html.twig' %}

{% block sidebar %}
    {% set sidebar_active = 'user' %}
    {{ parent() }}
{% endblock  %}

{% block content %}

    <!-- begin #content -->
    <div id="content" class="content">
        <!-- begin breadcrumb -->
        <ol class="breadcrumb pull-right">
            <li><a href="{{ path('homepage') }}">Accueil</a></li>
            <li class="active">Utilisateurs</li>
        </ol>
        <!-- end breadcrumb -->
        <!-- begin page-header -->
        <h1 class="page-header">Utilisateurs Enregistrés</h1>
        <!-- end page-header -->

        <!-- begin row : Première ligne -->
        <div class="row">

            <!-- begin col-12 -->
            <div class="col-md-12">
                <!-- begin panel -->
                <div class="panel panel-inverse" data-sortable-id="table-basic-1">
                    <div class="panel-heading">

                        <h4 class="panel-title">Liste des utilisateurs</h4>
                    </div>
                    <div class="panel-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Login</th>
                                    <th>Prénom</th>
                                    <th>Nom</th>
                                    <th>Adresse email</th>
{#                                    <th>Rôle</th>#}
                                    <th><i class="fa fa-cog"></i></th>
{#                                    <th><i class="fa fa-trash"></i></th>#}
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.id }}</td>
                                        <td>{{ user.username }}</td>
                                        <td>{{ user.prenom|capitalize }}</td>
                                        <td>{{ user.nom|capitalize }}</td>
                                        <td>{{ user.getEmail }}</td>
{#                                        <td>Administrateur</td>#}
                                        <td><a href="{{ path('user_edit', { 'id': user.id }) }}" title="Modifier cet utilisateur"><i class="fa fa-pencil"></i></a></td>
{#                                        <td><a href="#" title="Supprimer cet utilisateur"><i class="fa fa-trash"></i></a></td>#}
                                    </tr>
                                {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- end panel -->
            </div>

            <div class="col-md-12">
                <a href="{{ path('user_new') }}"><div class="btn btn-primary m-r-5">Nouvel utilisateur</div></a>
            </div>		
        </div>
        <!-- end row -->
    </div>
    <!-- end #content -->


{% endblock %}
